<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/video_list_item_height">

    <FrameLayout
        style="@style/Separator"
        android:layout_height="@dimen/separator_line_thin"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/iv_video_icon"
        android:layout_width="@dimen/video_icon_width"
        android:layout_height="@dimen/video_icon_height"
        android:contentDescription="@string/default_image_desc"
        android:src="@android:drawable/ic_media_play"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_trailer_label"
        style="@style/TextContent"
        android:layout_marginBottom="@dimen/indent_one_step"
        android:layout_marginStart="@dimen/indent_two_steps"
        android:layout_marginTop="@dimen/indent_none"
        android:textAlignment="viewEnd"
        app:layout_constraintBottom_toBottomOf="parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground" />

</android.support.constraint.ConstraintLayout>